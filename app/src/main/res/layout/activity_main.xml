<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Bienvenue sur Det'co!"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="50dp"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="55dp" />

        <ImageView
            android:id="@+id/image_batterie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:minWidth="250dp"
            android:minHeight="250dp"
            app:srcCompat="@drawable/batterie" />

        <TextView
            android:id="@+id/batterie"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="125dp"
            android:text="Batterie"
            android:textColor="@color/rouge"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_parametre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:minWidth="100dp"
                android:minHeight="100dp"
                app:srcCompat="@drawable/ic_baseline_settings_24" />

            <Button
                android:id="@+id/button_traduction"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:background="@color/orange"
                android:text="Traduction"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <Button
            android:id="@+id/button_connexion"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:background="@color/orange"
            android:text="Connexion"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>